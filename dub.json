	"configurations": [
		{
			"name": "x64-Cli",
			"targetType": "executable",
			"targetName": "Drill-x64-Cli",
			"sourcePaths": ["drill/core"],
			"sourceFiles": [
				"drill/core/FileInfo.d",
				"drill/core/Core.d",
				"drill/core/Crawler.d",
				"drill/core/Utils.d",

				"drill/cli/Cli.d"
			]
	
		},
		{
			"name": "x64-GTK",
			"targetType": "executable",
			"targetName": "Drill-x64-GTK",
			"sourcePaths": ["drill/core","drill/gtk"],
			"sourceFiles": [
				"drill/core/FileInfo.d",
				"drill/core/Core.d",
				"drill/core/Crawler.d",
				"drill/core/Utils.d",

				"drill/gtkui/Window.d",
				"drill/gtkui/SearchEntry.d",
				"drill/gtkui/Main.d"
			]
	
		}
	
	]
