{
    "name": "drill-search",
    "version": "2.1.2",
    "authors": [
        "Federico Santamorena"
    ],
    "description": "Search files without indexing, but clever crawling.",
    "copyright": "Copyright Â© 2019, Federico Santamorena",
    "license": "GPL-2.0",
    "homepage": "https://github.com/yatima1460/Drill",
    "dflags-posix": [
        "-J=."
    ],
    "dflags-windows": [
        "-L=.\\GTKWin\\lib",
        "-L=.\\GTKWin\\debug",
        "-L=.\\GTKWin\\bin",
        "-J=."
    ],
    "sourceFiles": [
        "Core/ApplicationInfo.d",
        "Core/Config.d",
        "Core/Context.d",
        "Core/Crawler.d",
        "Core/FileInfo.d",
        "Core/ListData.d",
        "Core/Meta.d",
        "Core/Utils.d"
    ],
    "copyFiles": [
        "Assets"
    ],
    "buildTypes": {
        "debug": {
            "buildOptions": [
                "debugMode",
                "debugInfo",
                "stackStomping",
                "alwaysStackFrame"
            ]
        },
        "release-debug": {
            "buildOptions": [
                "optimize",
                "debugInfo",
                "inline",
                "stackStomping",
                "alwaysStackFrame"
            ],
            "versions": [
                "StdLoggerDisableTrace"
            ]
        },
        "release": {
            "buildOptions": [
                "optimize",
                "inline",
                "noBoundsCheck",
                "releaseMode"
            ],
            "versions": [
                "StdLoggerDisableTrace",
                "StdLoggerDisableInfo",
                "StdLoggerDisableWarning",
                "StdLoggerDisableError"
            ]
        }
    },
    "configurations": [
        {
            "name": "CLI",
            "targetType": "executable",
            "targetName": "drill-search-cli",
            "mainSourceFile": "CLI/CLI.d",
            "targetPath": "Build/Drill-CLI-$PLATFORM-$ARCH-$BUILD_TYPE"
        },
        {
            "name": "GTK",
            "targetType": "executable",
            "targetName": "drill-search-gtk",
            "sourceFiles": [
                "GTK/GTKBinds.d",
                "GTK/ListStore.d",
                "GTK/TreeView.d"
            ],
            "libs-posix": [
                "gtk-3",
                "gio-2.0"
            ],
            "libs-osx": [
                "glib-2.0",
                "gobject-2.0"
            ],
            "libs-windows": [
                "GTK_x86_64_VS2019/installed/x64-windows/lib/gtk-3.0",
                "GTK_x86_64_VS2019/installed/x64-windows/lib/glib-2.0",
                "GTK_x86_64_VS2019/installed/x64-windows/lib/gio-2.0",
                "GTK_x86_64_VS2019/installed/x64-windows/lib/gobject-2.0"
            ],
            "mainSourceFile": "GTK/Main.d",
            "targetPath": "Build/Drill-GTK-$PLATFORM-$ARCH-$BUILD_TYPE",
            "copyFiles-windows": [
                "GTK_x86_64_VS2019/installed/x64-windows/bin/*.dll",
                "GTK-Windows/etc",
                "GTK-Windows/share"
            ]
        }
    ],
    "toolchainRequirements": {
        "dmd": ">=2.086.0",
        "gdc": "no",
        "ldc": ">=1.15.0"
    }
}