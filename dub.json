{
    "name": "drill-search",
    "version": "2.0.0",
    "authors": [
        "Federico Santamorena"
    ],
    "description": "Search files without indexing, but clever crawling.",
    "copyright": "Copyright Â© 2019, Federico Santamorena",
    "license": "GPL-2.0",
    "homepage": "https://github.com/yatima1460/Drill",
    "dflags": [
        "-J=."
    ],
    "copyFiles": [
        "Assets"
    ],
    "buildTypes": {
        "debug": {
            "buildOptions": [
                "debugMode",
                "debugInfo",
                "stackStomping",
                "alwaysStackFrame"
            ],
            "versions": ["StdLoggerDisableTrace"]
        },
        "release-debug": {
            "buildOptions": [
                "optimize",
                "debugInfo",
                "inline",
                "stackStomping",
                "alwaysStackFrame"
            ],
            "versions": ["StdLoggerDisableTrace"]
        },
        "release": {
            "buildOptions": [
                "optimize",
                "inline",
                "noBoundsCheck",
                "releaseMode"
            ],
            "versions": ["StdLoggerDisableTrace","StdLoggerDisableInfo","StdLoggerDisableWarning"]
        }
    },
    "configurations": [
        {
            "name": "CLI",
            "targetType": "executable",
            "targetName": "drill-search-cli",
            "mainSourceFile":"Source/Frontend/CLI/CLI.d",
            "targetPath": "Build/Drill-CLI-$PLATFORM-$ARCH-$BUILD_TYPE",
            "sourceFiles": [
                "Source/Backend/ApplicationInfo.d",
                "Source/Backend/Config.d",
                "Source/Backend/Context.d",
                "Source/Backend/Crawler.d",
                "Source/Backend/FileInfo.d",
                "Source/Backend/ListData.d",
                "Source/Backend/Meta.d",
                "Source/Backend/Utils.d",
                "Source/Frontend/CLI/CLI.d"
            ]
        },
        
        {
            "name": "GTK",
            "targetType": "executable",
            "targetName": "drill-search-gtk",
            "sourceFiles": [
                "Source/Backend/ApplicationInfo.d",
                "Source/Backend/Config.d",
                "Source/Backend/Context.d",
                "Source/Backend/Crawler.d",
                "Source/Backend/FileInfo.d",
                "Source/Backend/ListData.d",
                "Source/Backend/Meta.d",
                "Source/Backend/Utils.d",
                "Source/Frontend/GTK/GTKBinds.d",
                "Source/Frontend/GTK/ListStore.d",
                "Source/Frontend/GTK/TreeView.d"
            ],
            "libs-posix": [
                "gtk-3",
                "gio-2.0"
            ],
            "mainSourceFile":"Source/Frontend/GTK/Main.d",
            "targetPath": "Build/Drill-GTK-$PLATFORM-$ARCH-$BUILD_TYPE"
        }
    ],
    "toolchainRequirements": {
        "dmd": ">=2.086.0",
        "gdc": "no",
        "ldc": ">=1.15.0"
    }
}