{
	"name": "drill",
	"authors": [
		"Federico Santamorena"
	],
	"description": "Search files without indexing, but clever crawling.",
	"copyright": "Copyright Â© 2019, Federico Santamorena",
	"license": "GPL-2.0",
	"homepage": "https://github.com/yatima1460/Drill",
	"preGenerateCommands-posix": [
		"git describe --tags > assets/DRILL_VERSION"
	],
	"preGenerateCommands-windows": [],
	"targetName":"DrillExecutable",
	"targetType": "executable",
	"configurations": [
		{
			"name": "Cli",
			
			
			"sourceFiles": [
				"drill/core/FileInfo.d",
				"drill/core/Core.d",
				"drill/core/Crawler.d",
				"drill/core/Utils.d",
				"drill/cli/Cli.d"
			],
			"dependencies": {
				"datefmt": {
					"path": "vendor/datefmt"
				}
			}
		},
		{
			"name": "GTK",

			
			"sourceFiles": [
				"drill/core/FileInfo.d",
				"drill/core/Core.d",
				"drill/core/Crawler.d",
				"drill/core/Utils.d",
				"drill/gtkui/Window.d",
				"drill/gtkui/SearchEntry.d",
				"drill/gtkui/Main.d"
			],
			"dependencies": {
				"gtk-d:gtkd": {
					"path": "vendor/GtkD"
				},
				"datefmt": {
					"path": "vendor/datefmt"
				}
			}
		}
	],
	"postBuildCommands-posix": [
		"mv DrillExecutable Drill-$$DUB_CONFIG-$$DUB_ARCH-$$DUB_BUILD_TYPE"
	]
	
}