{
    "name": "drill-search",
    "authors": [
        "Yatima Santamorena"
    ],
    "description": "Search files without indexing, but clever crawling.",
    "copyright": "Copyright Â© 2021, Yatima Santamorena",
    "license": "GPL-2.0",
    "homepage": "https://github.com/yatima1460/Drill",
    "dflags-posix": [
        "-J=."
    ],
    "dflags-windows": [
        "-L=.\\GTKWin\\lib",
        "-L=.\\GTKWin\\debug",
        "-L=.\\GTKWin\\bin",
        "-J=."
       
    ],

    "copyFiles": [
        "Assets"
    ],
    "buildTypes": {
        "debug": {
            "buildOptions": [
                "debugMode",
                "debugInfo",
                "stackStomping",
                "alwaysStackFrame"
            ]
        },
        "release-debug": {
            "buildOptions": [
                "optimize",
                "debugInfo",
                "inline",
                "stackStomping",
                "alwaysStackFrame"
            ],
            "versions": ["StdLoggerDisableTrace"]
        },
        "release": {
            "buildOptions": [
                "optimize",
                "inline",
                "noBoundsCheck",
                "releaseMode"
            ],
            "versions": ["StdLoggerDisableTrace","StdLoggerDisableInfo","StdLoggerDisableWarning","StdLoggerDisableError"]
        }
    },
    "configurations": [
        {
            "name": "CLI",
            "targetType": "executable",
            "targetName": "drill-search-cli",
            "mainSourceFile":"CLI/CLI.d",
            "targetPath": "Build/Drill-CLI-$PLATFORM-$ARCH-$BUILD_TYPE",
            "sourceFiles": [
                "Core/ApplicationInfo.d",
                "Core/Config.d",
                "Core/Context.d",
                "Core/Crawler.d",
                "Core/FileInfo.d",
                "Core/ListData.d",
                "Core/Meta.d",
                "Core/Utils.d"
            ]
        },
        
        {
            "name": "GTK",
            "targetType": "executable",
            "targetName": "drill-search-gtk",
            "sourceFiles": [
                "Core/ApplicationInfo.d",
                "Core/Config.d",
                "Core/Context.d",
                "Core/Crawler.d",
                "Core/FileInfo.d",
                "Core/ListData.d",
                "Core/Meta.d",
                "Core/Utils.d",
                "GTK/GTKBinds.d",
                "GTK/ListStore.d",
                "GTK/TreeView.d",
                "GTK/UI_Utils.d"
            ],
            "libs-posix": [
                "gtk-3",
                "gio-2.0"
            ],
            "libs-windows": [
                ".\\GTKWin\\lib\\gtk-3.0",
                ".\\GTKWin\\lib\\glib-2.0",
                ".\\GTKWin\\lib\\gio-2.0",
                ".\\GTKWin\\lib\\gobject-2.0"
            ],
            "mainSourceFile":"GTK/Main.d",
            "targetPath": "Build/Drill-GTK-$PLATFORM-$ARCH-$BUILD_TYPE",
            
            "copyFiles-windows": [
                "Assets",
                "GTKWin/bin/*.dll",
                "GTKWin/data/*"
            ]
        }
    ],
    "toolchainRequirements": {
        "dmd": ">=2.086.0",
        "gdc": "no",
        "ldc": ">=1.15.0"
    }
}
