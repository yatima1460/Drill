{
  "name": "drill-cli",
  "authors": [
    "Federico Santamorena"
  ],
  "description": "Search files without indexing, but clever crawling.",
  "copyright": "Copyright Â© 2019, Federico Santamorena",
  "license": "GPL-2.0",
  "homepage": "https://github.com/yatima1460/Drill",
  "targetType": "executable",
  "targetName": "drill-search-cli",
  "sourceFiles": [
    "CLI.d"
  ],
  "mainSourceFile": "CLI.d",
  "importPaths": [
    "../../Backend"
  ],
  "dependencies": {
    "drill-core": {
      "path": "../../Backend"
    }
  },
	"buildTypes": {
		"debug": {
			"buildOptions": [
				"debugMode",
				"debugInfo",
				"stackStomping",
				"alwaysStackFrame"
			]
		},
		"release-debug": {
			"buildOptions": [
				"optimize",
				"debugInfo",
				"inline",
				"stackStomping",
				"alwaysStackFrame"
			]
		},
		"release": {
			"buildOptions": [
				"optimize",
				"inline",
				"noBoundsCheck",
				"releaseMode"
			]
		}
	},
  "copyFiles": [
    "../../../Assets"
  ],
  "targetPath": "Build/Drill-CLI-$PLATFORM-$ARCH-$BUILD_TYPE",
  "toolchainRequirements": {
    "dmd": ">=2.086.0",
    "gdc": "no",
		"ldc": ">=1.15.0"
  }
}