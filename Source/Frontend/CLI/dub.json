  "homepage": "https://github.com/yatima1460/Drill",
  "targetType": "executable",
  "targetName": "drill-search-cli",
  "sourceFiles": [
    "CLI.d"
  ],
  "mainSourceFile": "CLI.d",
  "importPaths": [
    "../../Backend"
  ],
  "dependencies": {
    "drill-core": {
      "path": "../../Backend"
    }
  },
  "buildTypes": {
    "debug" : {
      "buildOptions": [
      "debugMode",
      "debugInfo"
      ]
    },
    "release": {
      "buildOptions": [
        "releaseMode",
        "optimize",
        "noBoundsCheck",
        "inline"
      ]
    }
  },
  "copyFiles": [
    "../../../Assets"
  ],
  "targetPath": "Build/Drill-CLI-$PLATFORM_POSIX-$ARCH-$BUILD_TYPE",
  "toolchainRequirements": {
    "dmd": ">=2.086.0",
    "gdc": "no",
		"ldc": ">=1.15.0"
  }
