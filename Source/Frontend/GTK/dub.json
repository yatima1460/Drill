{
	"name": "drill-gtk",
	"authors": [
		"Federico Santamorena"
	],
	"description": "Search files without indexing, but clever crawling.",
	"copyright": "Copyright Â© 2019, Federico Santamorena",
	"license": "GPL-2.0",
	"homepage": "https://github.com/yatima1460/Drill",
	"targetType": "executable",
	"targetName": "drill-search-gtk",
	"mainSourceFile": "Main.d",
	"libs-posix":
	[
		"gtk-3",
		"gobject-2.0",
		"glib-2.0",
		"gio-2.0"
	
	],
	"sourceFiles": [
		"Main.d"
	],
	"dependencies": {

		"drill-core": {
			"path": "../../Backend"
		}
	},
	"importPaths": [
		"../../Backend"
	],
	"copyFiles": [
		"../../../Assets"
	],
	"buildTypes": {
		"debug": {
			"buildOptions": [
				"debugMode",
				"debugInfo",
				"stackStomping",
				"alwaysStackFrame"
			]
		},
		"release-debug": {
			"buildOptions": [
				"optimize",
				"debugInfo",
				"inline",
				"stackStomping",
				"alwaysStackFrame"
			]
		},
		"release": {
			"buildOptions": [
				"optimize",
				"inline",
				"noBoundsCheck",
				"releaseMode"
			]
		}
	},
	"copyFiles": [
		"../../../Assets"
	],
	"dflags": [
		"-J=\"../../../Assets\""
	  ],
	"targetPath": "Build/Drill-GTK-$PLATFORM-$ARCH-$BUILD_TYPE",
	"toolchainRequirements": {
		"dmd": ">=2.086.0",
		"gdc": "no",
		"ldc": ">=1.15.0"
	}
}