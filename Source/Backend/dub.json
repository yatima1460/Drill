{
  "name": "drill-core",
  "authors": [
    "Federico Santamorena"
  ],
  "description": "Search files without indexing, but clever crawling.",
  "copyright": "Copyright Â© 2019, Federico Santamorena",
  "license": "GPL-2.0",
  "homepage": "https://github.com/yatima1460/Drill",
  "targetType": "library",
  "targetName": "drillcore",
  "sourceFiles": [
    "API.d",
    "FileInfo.d",
    "Crawler.d",
    "Utils.d",
    "Logger.d",
    "ApplicationInfo.d"
  ],
  "dflags": [
    "-J=\"../../../\"",
    "-J=\"../../\""
  ],
  "buildRequirements": [
    "allowWarnings"
  ],
  "importPaths": [
    "."
  ],
  "buildTypes": {
    "debug" : {
      "buildOptions": [
      "debugMode",
      "debugInfo",
      ]
    },
    "release": {
      "buildOptions": [
        "releaseMode",
        "optimize",
        "noBoundsCheck",
        "inline"
      ]
    }
  },
  "targetPath": "Build/Drill-Core-$PLATFORM-$ARCH-$BUILD_TYPE",
  "toolchainRequirements": {
    "dmd": ">=2.086.0",
    "gdc": "no",
    "ldc": "no"
  }
}