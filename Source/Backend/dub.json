{
  "name": "drill-core",
  "authors": [
    "Federico Santamorena"
  ],
  "description": "Search files without indexing, but clever crawling.",
  "copyright": "Copyright Â© 2019, Federico Santamorena",
  "license": "GPL-2.0",
  "homepage": "https://github.com/yatima1460/Drill",
  "targetType": "library",
  "targetName": "drillcore",
  "sourceFiles": [
    "Context.d",
    "Config.d",
    "Meta.d",
    "FileInfo.d",
    "Crawler.d",
    "Utils.d",
    "Logger.d",
    "ApplicationInfo.d"
  ],
  "dflags": [
    "-J=\"../../../\"",
    "-J=\"../../\"",
    "-J=\"$PACKAGE_DIR\"",
    "-vgc"
  ],
  "buildRequirements": [
    "allowWarnings"
  ],
  "importPaths": [
    "."
  ],
	"buildTypes": {
		"debug": {
			"buildOptions": [
				"debugMode",
				"debugInfo",
				"stackStomping",
				"alwaysStackFrame"
			]
		},
		"release-debug": {
			"buildOptions": [
				"optimize",
				"debugInfo",
				"inline",
				"stackStomping",
				"alwaysStackFrame"
			]
		},
		"release": {
			"buildOptions": [
				"optimize",
				"inline",
				"noBoundsCheck",
				"releaseMode"
			]
		}
	},
  "preBuildCommands": [
    "dmd $PACKAGE_DIR/../../Tools/ListsMerger.d -of=$PACKAGE_DIR/ListsMerger",
    "$PACKAGE_DIR/ListsMerger $PACKAGE_DIR/../../Assets/BlockLists $PACKAGE_DIR",
    "$PACKAGE_DIR/ListsMerger $PACKAGE_DIR/../../Assets/PriorityLists $PACKAGE_DIR"
  ],
  "targetPath": "Build/Drill-Core-$PLATFORM-$ARCH-$BUILD_TYPE",
  "toolchainRequirements": {
    "dmd": ">=2.086.0",
    "gdc": "no",
    "ldc": ">=1.15.0"
  }
}